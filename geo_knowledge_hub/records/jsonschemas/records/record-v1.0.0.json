{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://localhost/schemas/records/record-v1.0.0.json",
  "title": "GEO Knowledge Hub v1.0.0",
  "definitions": {
    "contributor_person_or_org": {
      "additionalProperties": false,
      "properties": {
        "affiliation": {
          "description": "Affiliation for the purpose of this specific record.",
          "type": "string"
        },
        "name": {
          "description": "Full name of person or organisation. Personal name format: family, given.",
          "type": "string"
        },
        "orcid": {
          "description": "ORCID identifier for creator.",
          "type": "string"
        },
        "type": {
          "enum": [
            "ContactPerson",
            "DataCollector",
            "DataCurator",
            "DataManager",
            "Distributor",
            "Editor",
            "HostingInstitution",
            "Other",
            "Producer",
            "ProjectLeader",
            "ProjectManager",
            "ProjectMember",
            "RegistrationAgency",
            "RegistrationAuthority",
            "RelatedPerson",
            "Researcher",
            "ResearchGroup",
            "RightsHolder",
            "Sponsor",
            "Supervisor",
            "WorkPackageLeader"
          ],
          "type": "string"
        }
      },
      "required": [
        "name",
        "type"
      ],
      "type": "object"
    },
    "relation": {
      "description": "Relation type.",
      "enum": [
        "isCitedBy",
        "cites",
        "isSupplementTo",
        "isSupplementedBy",
        "isContinuedBy",
        "continues",
        "hasMetadata",
        "isMetadataFor",
        "isNewVersionOf",
        "isPreviousVersionOf",
        "isPartOf",
        "hasPart",
        "isReferencedBy",
        "references",
        "isDocumentedBy",
        "documents",
        "isCompiledBy",
        "compiles",
        "isVariantFormOf",
        "isOrignialFormOf",
        "isIdenticalTo",
        "isReviewedBy",
        "reviews",
        "isDerivedFrom",
        "isSourceOf"
      ],
      "type": "string"
    },
    "scheme": {
      "description": "Persistent identifier scheme.",
      "enum": [
        "ads",
        "ark",
        "arxiv",
        "bioproject",
        "biosample",
        "doi",
        "ean13",
        "ean8",
        "ensembl",
        "genome",
        "gnd",
        "hal",
        "handle",
        "isbn",
        "isni",
        "issn",
        "istc",
        "lsid",
        "orcid",
        "pmcid",
        "pmid",
        "purl",
        "refseq",
        "sra",
        "uniprot",
        "url",
        "urn"
      ],
      "type": "string"
    }
  },
  "type": "object",
  "properties": {
    "docset_doi": {
      "description": "DOI of the whole document set.",
      "type": "string"
    },
    "docset_title": {
      "description": "Full title of the whole document set.",
      "type": "string"
    },
    "docset_abstract": {
      "description": "Description or abstract of the whole document set.",
      "type": "string"
    },
    "docset_keywords": {
      "description": "Free text keywords of the document set.",
      "items": {
        "title": "Keyword",
        "type": "string"
      },
      "title": "Document Set Keywords",
      "type": "array"
    },
    "docset_notes": {
      "description": "Additional notes",
      "type": "string"
    },
    "publication_type": {
      "additionalProperties": false,
      "description": "Publication type.",
      "default": "article",
      "type": {
        "enum": [
          "book",
          "section",
          "conferencepaper",
          "article",
          "patent",
          "preprint",
          "report",
          "deliverable",
          "milestone",
          "proposal",
          "softwaredocumentation",
          "thesis",
          "technicalnote",
          "workingpaper",
          "datamanagementplan",
          "annotationcollection",
          "other"
        ],
        "type": "string"
      }
    },
    "publication_doi": {
      "description": "DOI of the publication",
      "type": "string"
    },
    "publication_title": {
      "description": "Title of the publication",
      "type": "string"
    },
    "publication_date": {
      "description": "Record publication date (IS8601-formatted). EDTF support to be added for field.",
      "type": "string"
    },
    "publication_authors": {
      "description": "Author(s) of the publication",
      "items": {
        "title": "Author",
        "type": "string"
      },
      "title": "Authors",
      "type": "array"
    },
    "publication_abstract": {
      "description": "Abstract of the publication",
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": [
    "recid",
    "resource_type",
    "title",
    "publication_date"
  ]
}
